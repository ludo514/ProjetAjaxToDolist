<div class="container text-center" id="email">
	<div class="card">
	  <div class="card-header">
	    Object : <%=@email.object%>
	  </div>
	  <div class="card-body">
	  	Contenue :
	    <blockquote class="blockquote mb-0">
	      <%=@email.body%>
	    </blockquote>
	    <%=link_to 'Supprimer', email_path(), method: :delete, class:'btn btn-danger',remote: true%>
	    <a href="<%=email_path()%>" class="btn btn-success" data-remote="true" data-method="PATCH">Marquer comme non-lu</a>
	  </div>
	</div>
</div>